<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.actions.act_window" id="action_lista_tareas">
            <field name="name">Listado de tareas</field>
            <field name="res_model">lista_tareas.lista</field>
            <field name="view_mode">tree,form,kanban,calendar</field>
        </record>

        <record model="ir.actions.act_window" id="action_lista_tareas_categoria">
            <field name="name">Categorías de Tareas</field>
            <field name="res_model">lista_tareas.categoria</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_instituto_ciclo">
            <field name="name">Ciclos Formativos</field>
            <field name="res_model">instituto.ciclo</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_instituto_alumne">
            <field name="name">Alumnos</field>
            <field name="res_model">instituto.alumne</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_instituto_modulo">
            <field name="name">Módulos</field>
            <field name="res_model">instituto.modulo</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="lista_tareas_menu_root" name="Listado de tareas" sequence="10"/>

        <menuitem id="lista_tareas_menu_1" name="Gestión de tareas"
                  parent="lista_tareas_menu_root" sequence="20"/>

        <menuitem id="lista_tareas_menu_1_list" name="Ver tareas"
                  parent="lista_tareas_menu_1" action="action_lista_tareas" sequence="10"/>

        <menuitem id="lista_tareas_menu_categoria" name="Categorías"
                  parent="lista_tareas_menu_1" action="action_lista_tareas_categoria" sequence="20"/>

        <menuitem id="menu_instituto_raiz" name="Instituto" sequence="50"/>

        <menuitem id="menu_ciclos" name="Ciclos"
                  parent="menu_instituto_raiz" action="action_instituto_ciclo" sequence="10"/>

        <menuitem id="menu_alumnos" name="Alumnos"
                  parent="menu_instituto_raiz" action="action_instituto_alumne" sequence="20"/>

        <menuitem id="menu_modulos" name="Módulos"
                  parent="menu_instituto_raiz" action="action_instituto_modulo" sequence="30"/>

        <record id="view_lista_tareas_list" model="ir.ui.view">
            <field name="name">lista.tareas.list</field>
            <field name="model">lista_tareas.lista</field>
            <field name="arch" type="xml">
                <tree string="Tareas" decoration-danger="vencida == True" decoration-success="realizada == True">
                    <field name="tarea"/>
                    <field name="categoria_id"/>
                    <field name="user_id" widget="many2user_avatar"/>
                    <field name="data_limit" widget="remaining_days"/>
                    <field name="prioridad"/>
                    <field name="urgente" widget="boolean_toggle"/>
                    <field name="realizada" widget="boolean_toggle"/>
                    <field name="vencida" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_lista_tareas_form" model="ir.ui.view">
            <field name="name">lista.tareas.form</field>
            <field name="model">lista_tareas.lista</field>
            <field name="arch" type="xml">
                <form string="Tarea">
                    <header>
                        <field name="realizada" widget="boolean_button" options='{"terminology": "done"}'/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="tarea" placeholder="Ej. Terminar informe de lectura..."/></h1>
                        </div>
                        <group>
                            <group string="Asignación y Categoría">
                                <field name="user_id" widget="many2one_avatar_user"/>
                                <field name="categoria_id" options="{'no_create': True}"/>
                                <field name="fecha_asignada" readonly="1"/>
                            </group>
                            <group string="Plazos y Estado">
                                <field name="data_limit"/>
                                <field name="vencida" invisible="not vencida" decoration-danger="vencida == True"/>
                                <field name="prioridad"/>
                                <field name="urgente" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_instituto_modulo_tree" model="ir.ui.view">
            <field name="name">instituto.modulo.tree</field>
            <field name="model">instituto.modulo</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ciclo_id"/>
                    <field name="professor_id"/>
                </tree>
            </field>
        </record>

        <record id="view_instituto_alumne_tree" model="ir.ui.view">
            <field name="name">instituto.alumne.tree</field>
            <field name="model">instituto.alumne</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="modulo_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="view_lista_tareas_kanban" model="ir.ui.view">
            <field name="name">lista.tareas.kanban</field>
            <field name="model">lista_tareas.lista</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="tarea"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="tarea"/></strong>
                                    <div>Prioridad: <field name="prioridad"/></div>
                                    <div>Límite: <field name="data_limit"/></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_lista_tareas_calendar" model="ir.ui.view">
            <field name="name">lista.tareas.calendar</field>
            <field name="model">lista_tareas.lista</field>
            <field name="arch" type="xml">
                <calendar string="Calendario de Tareas" date_start="data_limit" color="user_id" mode="month">
                    <field name="tarea"/>
                    <field name="user_id" avatar_field="image_128"/>
                </calendar>
            </field>
        </record>

        <record id="view_lista_tareas_search" model="ir.ui.view">
            <field name="name">lista.tareas.search</field>
            <field name="model">lista_tareas.lista</field>
            <field name="arch" type="xml">
                <search string="Buscar tareas">
                    <field name="tarea"/>
                    <field name="user_id"/>
                    <field name="categoria_id"/>
                    <filter name="filtro_urgente" string="Urgente" domain="[('urgente','=',True)]"/>
                    <filter name="filtro_realizada" string="Realizadas" domain="[('realizada','=',True)]"/>
                    <filter name="filtro_vencida" string="Vencidas" domain="[('vencida','=',True)]"/>
                </search>
            </field>
        </record>

    </data>
</odoo>