<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===============================================================
         ACCIÓN: Abre las vistas de partidos desde el menú
         =============================================================== -->
    <record id="liga_partido_action" model="ir.actions.act_window">
        <field name="name">Partidos de la liga</field>
        <field name="res_model">liga.partido</field>
        <field name="view_mode">kanban,tree,form,graph</field>
    </record>

    <menuitem name="Partidos de la liga"
              id="liga_partido_menu"
              parent="liga_base_menu"
              action="liga_partido_action"/>

    <!-- ===============================================================
         FORM VIEW
         =============================================================== -->
    <record id="liga_partido_view_form" model="ir.ui.view">
        <field name="name">Formulario Partidos</field>
        <field name="model">liga.partido</field>
        <field name="arch" type="xml">
            <form string="Registro de Partido">
                 <header>
                    <button name="sumar_gols_casa"
                            string="+2 Gols Casa"
                            type="object"
                            class="oe_highlight"
                            confirm="Segur que vols sumar 2 gols a tots els locals?"/>

                    <button name="sumar_gols_visitant"
                            string="+2 Gols Visitant"
                            type="object"
                            confirm="Segur que vols sumar 2 gols a tots els visitants?"/>
                </header>
                <group>
                    <group>
                        <field name="equipo_casa"/>
                        <field name="goles_casa"/>
                    </group>
                    <group>
                        <field name="equipo_fuera"/>
                        <field name="goles_fuera"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="liga_partido_view_graph" model="ir.ui.view">
        <field name="name">liga.partido.graph</field>
        <field name="model">liga.partido</field>
        <field name="arch" type="xml">
            <graph string="Gols a Casa" type="bar">
                <field name="equipo_casa" type="row"/>
                <field name="goles_casa" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- ===============================================================
         LIST VIEW
         =============================================================== -->
    <record id="liga_partido_view_list" model="ir.ui.view">
        <field name="name">Lista de partidos de la liga</field>
        <field name="model">liga.partido</field>
        <field name="arch" type="xml">
            <tree string="Partidos jugados">
                <field name="equipo_casa"/>
                <field name="goles_casa"/>
                <field name="equipo_fuera"/>
                <field name="goles_fuera"/>
            </tree>
        </field>
    </record>

    <!-- ===============================================================
         KANBAN VIEW (corregido para Odoo 19 / OWL)
         =============================================================== -->
    <record id="liga_partido_view_kanban" model="ir.ui.view">
        <field name="name">Tarjetas de partidos de la liga</field>
        <field name="model">liga.partido</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="equipo_casa"/>
                <field name="goles_casa"/>
                <field name="equipo_fuera"/>
                <field name="goles_fuera"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content text-center">
                                <div class="oe_kanban_card" style="padding:10px;">
                                    <p><b>⚽ Resultado del Partido ⚽</b></p>
                                    <p>
                                        <!-- USAMOS t-esc EN VEZ DE t-field -->
                                        <t t-esc="record.equipo_casa.value"/> :
                                        <t t-esc="record.goles_casa.value"/>
                                        <strong> - </strong>
                                        <t t-esc="record.goles_fuera.value"/> :
                                        <t t-esc="record.equipo_fuera.value"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
